@model Blog.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <div id="postlist">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-sm-9">
                                    <h3 class="pull-left">@Model.Title</h3>
                                </div>
                            </div>

                            <div class="panel-body">
                                <a href="#" class="thumbnail">
                                    <img class="img-thumbnail" src="/Books/@Model.Title" />
                                </a>
                                 
                                <div class="panel-body " style=" word-wrap: break-word">
                                    @Model.Content
                                </div>
                            </div>

                            <div class="panel-footer">
                                <a href="@Model.Uri" target="_blank" type="button" class="label label-default">Buy Now</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="label label-default">Delete </a>
                                }
                                <button class="label label-default" onclick="window.history.back()">Back to List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
