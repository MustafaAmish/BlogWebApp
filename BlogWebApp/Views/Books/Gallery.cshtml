@model ICollection<Blog.Models.Book>

@{
    ViewData["Title"] = "Gallery";
}

<hr />
<div class="container">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" asp-action="Details" asp-route-id="@book.Id">
                    <img class="img-thumbnail" src="/Books/@book.Title">
                </a>
            </div>
        }
    </div>
</div>

<div class="panel-footer">

    <button class="label label-default" onclick="window.history.back()">Go Back</button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
