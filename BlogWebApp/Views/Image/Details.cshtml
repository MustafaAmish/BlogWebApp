@model Blog.Models.Image

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <div id="postlist">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-sm-9">
                                    <h3 class="pull-left">@Model.Name</h3>
                                </div>
                            </div>

                            <div class="panel-body">
                                <a href="#" class="thumbnail">
                                    <img class="img-thumbnail" src="/Image/@Model.Name"  />
                                </a>

                                <div class="panel-body " style=" word-wrap: break-word">
                                    @Model.Description
                                </div>
                            </div>

                            <div class="panel-footer">
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="label label-default">Delete </a>
                                }
                                <button class="label label-default" onclick="window.history.back()">Back to List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
