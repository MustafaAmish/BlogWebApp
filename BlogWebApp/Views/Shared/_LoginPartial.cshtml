@using Blog.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (User.Identity.IsAuthenticated)
{
<ul class="nav navbar-nav navbar-right">
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link nav-link-dark">Hello Admin!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-link-dark" asp-controller="Posts" asp-action="Delete">Delete</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-link-dark" asp-controller="Posts" asp-action="Create">Create</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link nav-link-dark">Hello @User.Identity.Name!</a>
        </li>

    }
    <li class="nav-item">
        <a class="nav-link nav-link-dark" asp-controller="User" asp-action="Logout">Logout</a>
    </li>
    <li class="nav-item">
        <a class="nav-link nav-link-dark" asp-controller="Posts" asp-action="Index">Posts</a>
    </li>
</ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link nav-link-dark" asp-controller="User" asp-action="Index">Register</a></li>
        <li class="nav-item"><a class="nav-link nav-link-dark" asp-controller="User" asp-action="Login">Login</a></li>
    </ul>
}